<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text_edit">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_text_edit</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="style_text_selector_bar_item">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_text_hint</item>
        <item name="maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_normal</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingHorizontal">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>