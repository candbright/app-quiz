<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_background_normal">

        <LinearLayout
            android:id="@+id/button_first"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:background="@color/pantone_flesh_1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/container_bottom"
            app:layout_constraintLeft_toLeftOf="@+id/container_bottom"
            app:layout_constraintRight_toLeftOf="@+id/button_second"
            app:layout_constraintTop_toTopOf="@+id/container_bottom">

            <ImageView
                android:id="@+id/image_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:src="@color/common_blue" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="first"
                android:textColor="@color/color_text_bottom_bar"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_second"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:background="@color/pantone_flesh_1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/container_bottom"
            app:layout_constraintLeft_toRightOf="@+id/button_first"
            app:layout_constraintRight_toLeftOf="@+id/button_third"
            app:layout_constraintTop_toTopOf="@+id/container_bottom">

            <ImageView
                android:id="@+id/image__second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:src="@color/common_blue" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="second"
                android:textColor="@color/color_text_bottom_bar"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_third"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:background="@color/pantone_flesh_1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/container_bottom"
            app:layout_constraintLeft_toRightOf="@+id/button_second"
            app:layout_constraintRight_toRightOf="@+id/container_bottom"
            app:layout_constraintTop_toTopOf="@+id/container_bottom">

            <ImageView
                android:id="@+id/image_third"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:src="@color/common_blue" />

            <TextView
                android:id="@+id/tv_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="music"
                android:textColor="@color/color_text_bottom_bar"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
